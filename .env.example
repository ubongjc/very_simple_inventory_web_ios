# Database
DATABASE_URL="postgresql://user:password@localhost:5432/rental_inventory?schema=public"

# NextAuth (Authentication)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Email Configuration
# Using Resend for transactional emails (Get your API key at https://resend.com)
RESEND_API_KEY="re_..."
EMAIL_FROM_ADDRESS="noreply@yourdomain.com"
EMAIL_FROM_NAME="Very Simple Inventory"
SUPPORT_EMAIL="support@verysimpleinventory.com"

# Optional: Legacy SMTP Configuration (if not using Resend)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-email@example.com"
SMTP_PASSWORD="your-smtp-password"

# Stripe (Optional - for Premium payments)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Premium Features - Stripe Price IDs
STRIPE_PRO_PRICE_ID="price_..."
STRIPE_BUSINESS_PRICE_ID="price_..."

# Paystack (Optional - for NGN payments)
# Get your keys from https://dashboard.paystack.com/#/settings/developer
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY="pk_test_..."
PAYSTACK_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_PAYSTACK_CALLBACK_URL="http://localhost:3000/payment/callback"
