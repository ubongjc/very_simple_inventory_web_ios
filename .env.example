# Database
DATABASE_URL="postgresql://user:password@localhost:5432/rental_inventory?schema=public"
DATABASE_URL_UNPOOLED="postgresql://user:password@localhost:5432/rental_inventory?schema=public"

# NextAuth (Authentication)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# App URL (for redirects and emails)
APP_URL="https://verysimpleinventory.com"

# ─────────────────────────────────────────────────────
# PREMIUM FEATURES - Stripe Subscription Billing
# ─────────────────────────────────────────────────────
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_live_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_..."
# Webhook secret from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET="whsec_..."
# Premium subscription price ID (₦15,000/month)
STRIPE_PRICE_ID="price_..."

# ─────────────────────────────────────────────────────
# PREMIUM FEATURES - Email (Resend for reminders & receipts)
# ─────────────────────────────────────────────────────
# Get your key from https://resend.com/api-keys
RESEND_API_KEY="re_..."
EMAIL_FROM_NAME="Very Simple Inventory"
EMAIL_FROM_ADDRESS="noreply@verysimpleinventory.com"

# ─────────────────────────────────────────────────────
# PREMIUM FEATURES - Events Near You (optional)
# ─────────────────────────────────────────────────────
# Google Geocoding API for location-based events
# Get your key from https://console.cloud.google.com/apis/credentials
GOOGLE_GEOCODING_API_KEY="AIza..."

# Eventbrite API for event data (optional)
EVENTBRITE_API_KEY="..."

# ─────────────────────────────────────────────────────
# PREMIUM FEATURES - Online Payments
# ─────────────────────────────────────────────────────
# Paystack for NGN payments (alternative to Stripe)
# Get your keys from https://dashboard.paystack.com/#/settings/developer
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY="pk_live_..."
PAYSTACK_SECRET_KEY="sk_live_..."

# ─────────────────────────────────────────────────────
# PREMIUM FEATURES - SMS Notifications (optional)
# ─────────────────────────────────────────────────────
# Twilio for SMS reminders (optional)
# Get your keys from https://www.twilio.com/console
TWILIO_ACCOUNT_SID="AC..."
TWILIO_AUTH_TOKEN="..."
TWILIO_PHONE_NUMBER="+1234567890"

# ─────────────────────────────────────────────────────
# PREMIUM FEATURES - File Storage (for photos)
# ─────────────────────────────────────────────────────
# Vercel Blob for photo uploads
# Automatically available on Vercel, or get token from https://vercel.com/dashboard/stores
BLOB_READ_WRITE_TOKEN="vercel_blob_rw_..."

# Alternative: AWS S3 for photo storage
# AWS_ACCESS_KEY_ID="AKIA..."
# AWS_SECRET_ACCESS_KEY="..."
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="verysimpleinventory-photos"

